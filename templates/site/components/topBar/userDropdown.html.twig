<div class="dropdown d-inline-block">
    <button type="button" id="dropdownMenuUser" data-toggle="dropdown" class="btn btn-link dropdown-toggle">
        <i class="fas fa-user-circle"></i> {{ app.user.user.nickname }}
    </button>
    <div class="dropdown-menu dropdown-menu-right mt-0 p-3">
        <a class="dropdown-item mb-2" href="{{ path('user_profile') }}"><i class="fa-fw fas fa-user"></i> Mein Profil</a>
        <a class="dropdown-item mb-2" href="{{ path('shop_checkout') }}"><i class="fas fa-money-bill"></i> Ticket/Addon Shop </a>
        <a class="dropdown-item" href="{{ path('shop_orders') }}"><i class="fas fa-shopping-cart"></i> Meine Bestellungen </a>

        {% if app.user.user.clans | length %}
            <div class="dropdown-divider"></div>
            <h6 class="dropdown-header pl-0">Meine Clans</h6>
            {% for clan in app.user.user.clans %}
                <a class="dropdown-item" href="{{ path('clan_show', {'uuid' : clan.uuid}) }}"><i class="fa-fw fas fa-users"></i>  {{ clan.name }}</a>
            {% endfor %}
        {% endif %}

        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="{{ path('app_logout') }}"><i class="fa-fw fas fa-sign-out-alt"></i> Abmelden</a>
    </div>
</div>