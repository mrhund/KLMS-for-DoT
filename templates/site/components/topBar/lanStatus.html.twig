            {% if user is not registered_user %}
                <a class="btn btn-link" href="{{ path('shop_checkout') }}"><i class="fa fa-ticket"></i> Ticket kaufen</a>
            {% else %}
                {% if not settings.get('lan.seatmap.enabled') %}
		    <a class="btn btn-link" href="{{ path('shop_checkout') }}"><i class="fa fa-ticket"></i> Bezahlt</a>
                {% else %}
                    {% if user is seated_user %}
                        <a class="btn btn-link" href="{{ url('seatmap') }}"><i class="fas fa-chair"></i> Sitzplatz {{ user | seat }}</a>
                    {% else %}
                        <a class="btn btn-link" href="{{ url('seatmap') }}"><i class="fas fa-chair"></i> Sitz auswÃ¤hlen</a>
                    {% endif %}
                {% endif %}
            {% endif %}
